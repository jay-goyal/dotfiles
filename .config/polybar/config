[colors]
black = #292D3E
red = #F07178
green = #C3E88D
yellow = #FFCB6B
blue = #82AAFF
magenta = #C792EA
cyan = #89DDFF
white = #FFFFFF

[bar/bar-bspwm]
width = 100%
height = 27
radius = 0.0
fixed-center = true

background = ${colors.black}
foreground = ${colors.white}

line-size=3

border-size = 0

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = Roboto:pixelsize=12;1
font-1 = Font Awesome 5 Free:pixelsize=12;2
font-2 = Font Awesome 5 Free Solid:pixelsize=12;2
font-3 = Font Awesome 5 Brands:pixelsize=12;2

modules-left = bspwm xwindow
modules-center =
modules-right = updates network date pulseaudio
separator = " | "
wm-restack = bspwm

tray-position = right
tray-padding = 2
cursor-click = pointer
cursor-scroll = ns-resize

[bar/bar-dwm]
